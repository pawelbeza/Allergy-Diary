<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/calendar_prev_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/display_date"
        android:layout_toLeftOf="@+id/display_date"
        android:background="@drawable/ic_baseline_chevron_left_24px" />

    <TextView
        android:id="@+id/display_date"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Feb 2019"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#222222"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/calendar_next_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/display_date"
        android:layout_toRightOf="@+id/display_date"
        android:background="@drawable/ic_baseline_chevron_right_24px" />
</RelativeLayout>