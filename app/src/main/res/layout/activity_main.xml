<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.github.mzule.fantasyslide.FantasyDrawerLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.mzule.fantasyslide.SideBar
            android:id="@+id/leftSideBar"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/background_color"
            android:gravity="center_vertical"
            app:maxTranslationX="66dp">
            <LinearLayout
                android:id="@+id/Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <com.example.allergydiary.CircleImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/launcher_icon_with_background"
                    app:civ_border_color="@color/menu_text_color"
                    app:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allergy Diary"
                    android:textColor="@color/menu_text_color"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_round_cloud_queue_24px"
                android:text="@string/settings" />
            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_round_import_contacts_24px"
                android:text="@string/diary" />
            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_round_bar_chart_24px"
                android:text="@string/graphs" />
            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_round_settings_24px"
                android:text="@string/settings" />

        </com.github.mzule.fantasyslide.SideBar>


    </com.github.mzule.fantasyslide.FantasyDrawerLayout>

    <TextView
        android:id="@+id/tipView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:visibility="invisible" />
</RelativeLayout>
